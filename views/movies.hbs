

<div class="row bg-white">
  <h2>IronHack</h2>
  <h3>Click on the movie to check the showtimes!</h3>
{{#each movies}}
  <div class="col-md-2">
    <div class="card">
      <img class="card-img-top" src="{{this.image}}" alt="{{this.title}}" />
      <div class="card-body">
        <h5 class="card-title">
          {{this.title}}
        </h5>
        <a href="/movie/{{this.id}}" >See more</a>
      </div>
    </div>
  </div>
{{/each}}
</div>